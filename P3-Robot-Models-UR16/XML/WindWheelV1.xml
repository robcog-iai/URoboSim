<robot name="ownWindWheel_robot">
	<!--Windrad mit zwei unabhÃƒÂ¤nigen RÃƒÂ¤dern. -->
	<!-- * * * Link Definitions * * * -->
	<link name="RRobotBase_link">
		<visual>
			<geometry>
				<box size="1 1 0.5"/>
			</geometry>
		</visual>
	</link>
	<link name="Tower_link">
		<visual>
			<geometry>
				<cylinder length="2" radius="0.3"/>
			</geometry>
		</visual>
	</link>
	<link name="TowerKnot1_link">
		<visual>
			<geometry>
				<cylinder length="0.3" radius="0.1"/>
			</geometry>
		</visual>
	</link>
	<link name="WingE2_link">
		<visual>
			<geometry>
				<box size="0.05 1.5 0.2"/>
			</geometry>
		</visual>
	</link>
	<link name="WingE1_link">
		<visual>
			<geometry>
				<box size="0.05 1.5 0.2"/>
			</geometry>
		</visual>
	</link>
	
	<!-- * * * Joint Definitions * * * -->
	<joint name="tower_joint" type="fixed">
		<parent link="RRobotBase_link"/>
		<child link="Tower_link"/>
		<origin xyz="0.125 0 1.2" rpy="0 0 0"/>
	</joint>

	<joint name="tower_Knot_joint" type="continuous">
		<axis xyz="0 0 1"/>
		<parent link="Tower_link"/>
		<child link="TowerKnot1_link"/>
		<origin xyz="0.4 0 0.75" rpy="0 1.575 0"/>
		<limit effort="100" velocity="100"/>
	</joint>

	<joint name="towerKnotE1_1_joint" type="fixed">
		<parent link="TowerKnot1_link"/>
		<child link="WingE1_link"/>
		<origin xyz="0.175 0.8 0" rpy="0 1.575 0"/>
	</joint>

	<joint name="towerKnotE1_2_joint" type="fixed">
		<parent link="TowerKnot1_link"/>
		<child link="WingE2_link"/>
		<origin xyz="0.175 -0.8 0" rpy="0 1.575 0"/>
	</joint>

</robot>
